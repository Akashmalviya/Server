<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>
        * {
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            margin: 0;
        }
        
        .form-control {
            display: block;
            width: 100%;
            border: 1px solid #aeaeae;
            padding: 10px 12px;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 0px;
            background: #F5F5F5;
            border-color: #F1EFEF;
        }
        
        .btn {
            background: #DD1800;
            color: #fff;
            border-radius: 30px;
            line-height: 1;
            text-transform: uppercase;
            padding: 12px 0;
            font-size: 16px;
            font-weight: bold;
            outline: none;
            box-shadow: none;
            width: 100%;
            border: 1px solid #dd1800;
            margin-top: 15px;
        }
        
        #error,
        #error2 {
            color: red;
            display: none;
        }
        
        #error.invalid,
        #error2.invalid {
            display: block;
        }
        
        .form-group {
            display: block;
            margin-bottom: 15px;
        }
        
        .form-group label {
            font-size: 14px;
            color: #C4C4C4;
            font-weight: 600;
        }
        
        .fixedbg {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            height: 100vh;
            width: 100vw;
            background-image: url('../assets/login_bg.png');
            background-size: cover;
            background-position: center center;
            z-index: 0;
        }
    </style>
</head>

<body>
    <div class="fixedbg"></div>
    <div style="line-height:1.4;font-family: sans-serif;box-sizing: content-box;-webkit-box-sizing: content-box;margin: 0;position: relative;z-index: 2;">
        <table style="width:100%; max-width:600px; margin:0 auto; padding:20px;">
            <tbody>
                <tr>
                    <td style="text-align:center;">

                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="padding:30px;border: 1px solid #e2e2e2;margin-top: 20px;background: #ffffff;">
                            <h2 style="color: #2f4ea8;font-weight: 700;font-size: 30px;text-align: center;margin-bottom: 20px;">Welcome</h2>
                            <form action="/api/login" method="post">
                                <h2 style="color: #3c3c3c;font-size: 22px;padding: 0px 0 10px;font-weight:500;text-align: center;margin-bottom: 15px;">Login</h2>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" name="email" required class="form-control" placeholder="Email">

                                </div>

                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" name="password" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required class="form-control" placeholder="Password">
                                    <span id="error">Password must contain 8 characters</span>
                                </div>
                                <button class="btn" type="submit">Submit</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <tr>
                </tr>
            </tbody>
        </table>
    </div>


    <script>
        var myInput = document.getElementById("psw");
        var myInput2 = document.getElementById("cf-psw");


        myInput.onkeyup = function() {
            var error = document.getElementById('error');
            // check if input is bigger than 3
            var value = document.getElementById('psw').value;
            if (value.length < 8) {
                console.log('less')

                error.classList.add("invalid");
                return false; // keep form from submitting
            }
            document.getElementById('error').classList.remove("invalid");
            console.log('big')
                // else form is good let it submit, of course you will 
                // probably want to alert the user WHAT went wrong.

            return true;
        }

        function cf_psw() {
            // document.getElementById("demo").style.backgroundColor = "red";
            var value = document.getElementById('psw').value;
            var error2 = document.getElementById('error2');
            // check if input is bigger than 3
            var value2 = myInput2.value;

            if (value != value2) {
                console.log('not E')
                error2.classList.add("invalid");
                return false; // keep form from submitting
            }
            error2.classList.remove("invalid");
            console.log('E')
                // else form is good let it submit, of course you will 
                // probably want to alert the user WHAT went wrong.

            return true;
        }
        myInput2.addEventListener("keyup", cf_psw);
    </script>
</body>

</html>